  "description": "This is pizza app made using MERN stack",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "14.16.0",
    "npm": "7.10.0"
  },
  "scripts": {
    "client-install": "npm install --prefix client",
    "server": "nodemon index.js",
